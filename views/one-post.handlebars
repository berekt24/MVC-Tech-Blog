<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each blogComments as |blogComment| }}
  <p>{{blogComment.blogComment_text}}</p>
  {{/each}}
  <p></p>
  <p>
    <button class="btn btn-primary">Comment</button>
  </p>
  <div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a comment:</h3>

    <form class="form new-comment-form">

      <div class="form-group">
        <label for="project-desc">comment:</label>
        <textarea class="form-input" id="comment" name="project-desc" data-post="{{id}}"></textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
</div>
<script src="/js/comment.js"></script>
